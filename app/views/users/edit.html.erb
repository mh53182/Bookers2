<div class="container">
  <div class="row">
    <div class="col-5 mx-auto">
      <h2>User info</h2>

      <% if @user.errors.any? %>
        <%= @user.errors.count %>errors prohibited this obj from being saved:
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <%= form_with model: @user do |f| %>

        <div class="field">
          <%= f.label :Name %><br>
          <%= f.text_field :name %>
        </div>

        <div class="field">
          <%= f.label :Image %><br>
          <%= f.file_field :profile_image, accept: "image/*" %>
        </div>

        <div class="field">
          <%= f.label :Introduction %><br>
          <%= f.text_area :introduction %>
        </div>

        <div class="actions">
          <%= f.submit "Update User", class: "btn btn-secondary" %>
        </div>
      <% end %>

    </div>
  </div>
</div>

