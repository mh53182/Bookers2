
<h2>New book</h2>
<%= form_with model: @book_new do |f| %>
  Title
  <%= f.text_field :title %>

  Opinion
  <%= f.text_area :body %>
  <%= f.submit "Create Book" %>
<% end %>



<h2>Users</h2>

<table>
  <tr>
    <th>image</th>
    <th>name</th>
  </tr>
  <tr>
    <% @users.each do |user| %>
      <td>profile_image</td>
      <td><% user.name %></td>
      <td><%= link_to "Show", user_path(user.id) %></td>
    <% end %>
  </tr>
</table>