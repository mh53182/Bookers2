<div class="container px-5">
  <div class="row">
    <div class="col-md-3">
      <!--ユーザーインフォ、新規投稿フォームの部分テンプレート-->
      <%= render 'layouts/userinfo_newbook', user: @user, book: @book %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>

      <table class="table">
        <tr>
          <th></th>
          <th>Title</th>
          <th>opinion</th>
        </tr>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= link_to user_path(@user.id) do %>
                  <%= image_tag @user.get_profile_image(80,80) %>
                <% end %>
              </td>
              <td>
                <%= link_to book_path(book.id) do %>
                  <%= book.title %>
                <% end %>
              </td>
              <td>
                <%= book.body %>
              </td>
            </tr>
          <% end %>
      </table>
    </div>
  </div>
</div>
