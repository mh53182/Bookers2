<h2>User info</h2>

<%= image_tag user.get_profile_image(100,100) %>

<table>
  <tr>
    <td>name</td>
    <td><%= user.name %></td>
  </tr>
  <tr>
    <td>introduction</td>
    <td><%= user.introduction %></td>
  </tr>
</table>

<%= link_to edit_user_path(current_user.id) do %>
  <i class="fa-solid fa-user-gear"></i>
<% end %>


<h2>New book</h2>
<%= form_with model: book_new do |f| %>
  Title
  <%= f.text_field :title %>

  Opinion
  <%= f.text_area :body %>
  <%= f.submit "Create Book" %>
<% end %>
